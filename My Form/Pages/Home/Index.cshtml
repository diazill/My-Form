@page
@model My_Form.Pages.Home.IndexModel
@{
}

<br>
<h2>LIST PELAMAR</h2>
<a class='btn btn-primary btn-sm' href="/Home/Create">New Pelamar</a>
<br>
 
<table class="table">
    <thead>
        <tr>
        <th>ID</th>
        <th>Nama</th>
        <th>Tanggal lahir</th>
        <th>Domisili</th>
        <th>Pendidikan Terakhir</th>
        <th>Apakah Merokok?</th>
        <th>Tanggal Dibuat</th>
        <th>Tanggal Update</th>
        <th>Posisi Dipilih</th>
    </tr>
    </thead>
    <tbody>
        @foreach(var it in Model.ListPelamar)
        {
            <tr>
                <td>@it.id</td>
                <td>@it.nama</td>
                <td>@it.tanggal_lahir</td>
                <td>@it.domisili</td>
                <td>@it.pendidikan_terakhir</td>
                <td>@if (it.merokok == "0")
                    {
                        <p>tidak</p>
                    }
                    else
                    {
                        <p>Ya</p>
                    }
                </td>
                <td>@it.created_at</td>
                <td>@it.updated_at</td>
                <td>@it.id_posisi</td>
                <td><a class="btn btn-warning btn-sm" href="/Home/Edit?id=@it.id">Edit</a></td>
                <td><a class="btn btn-danger btn-sm" href="/Home/Delete?id=@it.id">Delete</a></td>
            </tr>
        }
    </tbody>
    
</table>