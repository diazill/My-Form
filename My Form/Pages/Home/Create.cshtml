    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Merokok ? </label>
        <div class="col-sm-6">
            <div class="form-check">
                <input class="form-check-input" type="radio" name="merokok" id="merokok" value="1">
                <label class="form-check-label" for="merokok">
                    Ya
                </label>
            </div>
